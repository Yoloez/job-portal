        "/api/public/jobs": {
            "get": {
                "tags": [
                    "Jobs (Public)"
                ],
                "summary": "Get all job listings (Public)",
                "description": "Retrieve paginated job listings with optional search and filters",
                "operationId": "37b7b1eb7cc2d4f3c2f62c47c1f6473e",
                "parameters": [
                    {
                        "name": "keyword",
                        "in": "query",
                        "description": "Search keyword (searches in title, company, location)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "developer"
                        }
                    },
                    {
                        "name": "company",
                        "in": "query",
                        "description": "Filter by company name",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "Google"
                        }
                    },
                    {
                        "name": "location",
                        "in": "query",
                        "description": "Filter by location",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "Jakarta"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Items per page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated list of jobs",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "current_page": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "title": {
                                                        "type": "string",
                                                        "example": "Software Engineer"
                                                    },
                                                    "description": {
                                                        "type": "string",
                                                        "example": "We are looking for...\\"
                                                    },
                                                    "location": {
                                                        "type": "string",
                                                        "example": "Jakarta"
                                                    },
                                                    "company": {
                                                        "type": "string",
                                                        "example": "Tech Corp"
                                                    },
                                                    "salary": {
                                                        "type": "integer",
                                                        "example": 10000000
                                                    },
                                                    "logo": {
                                                        "type": "string",
                                                        "example": "logos/company.jpg"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "example": "2025-11-25T10:00:00.000000Z"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "total": {
                                            "type": "integer",
                                            "example": 50
                                        },
                                        "per_page": {
                                            "type": "integer",
                                            "example": 10
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
